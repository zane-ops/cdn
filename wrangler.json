{
	"$schema": "node_modules/wrangler/config-schema.json",
	"keep_vars": true,
	"compatibility_date": "2025-04-01",
	"main": "src/index.ts",
	"name": "zaneops-cdn",
	"upload_source_maps": true,
	"d1_databases": [
		{
			"binding": "DB",
			"database_id": "fdeffa46-2e3a-4919-b124-a9004a80a972",
			"database_name": "zaneops"
		}
	],
	 "secrets_store_secrets": [
    {
      "binding": "ZANEOPS_CDN_IP_HASH_PEPPER",
      "store_id": "8e15c89300e04e24801b806eff4ac8cd",
      "secret_name": "ZANEOPS_CDN_IP_HASH_PEPPER"
    }
  ],
	"observability": {
		"enabled": true
	},
	/**
	 * Smart Placement
	 * Docs: https://developers.cloudflare.com/workers/configuration/smart-placement/#smart-placement
	 */
	"placement": { "mode": "smart" }

	/**
